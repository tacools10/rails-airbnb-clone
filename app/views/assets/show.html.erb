<div class="showcard" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('http://lorempixel.com/800/800');">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-4">
        <ul>
          <% if current_user %>
            <h1><%= @asset.title %></h1>
            <h3>from <%= link_to @asset.user.first_name, user_path(user_id: @user.id) %></h3>
            <p>US$<%= @asset.price * 1000%></p>
            <p><%= @asset.address %> - <%= @asset.city %> - <%= @asset.country %></p>
            <p><%= @asset.region %></p>
            <% if current_user.id == @asset.user.id %>
              <p><%= link_to "Edit this asset", edit_user_asset_path(user_id: @user.id) %></p>
              <p><%= link_to "Delete this asset", user_asset_path(user_id: @user.id, method: :destroy) %></p>
            <% else %>
              <p><%= link_to "Make an offer for this", new_user_asset_offer_path(asset_id: @asset.id) %></p>
            <% end %>
          <% else %>
            <h1><%= @asset.title %></h1>
            <h3>from <%= @asset.user.first_name %></h3>
            <p>US$<%= @asset.price * 1000%></p>
            <p><%= @asset.address %> - <%= @asset.region %> - <%= @asset.city %></p>
            <p><%= link_to "Want to see more and make on offer?", new_user_registration_path %></p>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
